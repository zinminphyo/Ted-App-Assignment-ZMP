<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:foreground="@drawable/bg_ripple_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_talks_back_drop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ted_image_1"
            android:scaleType="centerCrop"
            android:foreground="#51292929"/>
        <TextView
            android:id="@+id/tv_talks_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ken Robinso"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_above="@id/tv_talks_title"
            android:layout_alignStart="@id/tv_talks_title"
            />
        <TextView
            android:id="@+id/tv_talks_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Do schools kill creativity?"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:maxLines="2"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/iv_more_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_grey"
            android:layout_above="@id/tv_time_duration"
            android:layout_alignEnd="@id/tv_time_duration"/>
        <TextView
            android:id="@+id/tv_time_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19:24"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="14sp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>